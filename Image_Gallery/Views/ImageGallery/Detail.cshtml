@model Image_Gallery.Models.GalleryDetailModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content ">
    <div class="row image-detail-container">
        <div class="image-detail">
            <img src="@Model.URL" alt="@Model.Title">
        </div>
    </div>
    <div class=" row image-detail-meta">
        <span>Title : @Model.Title</span>
        <span>Uploded : @Model.Created</span>
    </div>
    <div class=" row controls">
        <a class="btn btn-primary" asp-controller="ImageGallery" asp-action="Index">Back to Gallery</a>
    </div>
</div>